<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
            name="ch.unartig.studioserver.model.UserProfile"
            table="UserProfiles"
            lazy="false"
            >
        <meta attribute="generated-class" inherit="false">ch.unartig.studioserver.model.GeneratedUserProfile</meta>
        <cache usage="read-write"/>

        <!--<cache usage="read-write"/>-->
        <id
                name="userProfileId"
                type="java.lang.Long"
                >
            <meta attribute="use-in-tostring">true</meta>
            <generator class="native">
                <param name="sequence">sequence_UserProfileId</param>
            </generator>
        </id>

        <property
                name="userName"
                unique="true"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
            <!--use the username as 'semi-identifying' criterium in the equals/hashcode implementation:-->
            <meta attribute="use-in-equals">true</meta>
        </property>

        <property
                name="password"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">false</meta>
        </property>

        <property
                name="firstName"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="lastName"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="emailAddress"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="phone"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="phoneMobile"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="title"
                type="java.lang.String"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>


        <property
                name="addr1"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="addr2"
                type="java.lang.String"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="zipCode"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="city"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="state"
                type="java.lang.String"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>
        <property
                name="country"
                type="java.lang.String"
                length="255"
                not-null="true"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>
        <!--gender: m or f-->
        <property
                name="gender"
                type="java.lang.String"
                not-null="true"
                length="1"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>


        <one-to-one name="photographer"
             lazy="false"
             cascade="save-update"
             class="ch.unartig.studioserver.model.Photographer"/>


        <!--
        we do not use the IDs for the m-m table in order to be compliant with the datasource-authentication of tomcat
        (see the usage of the "property-ref" attribute!)
        The cascade=save-update setting has been disabled after problems when saving the userprofile with ZK
         -->
        <set name="roles"
             lazy="false"
             table="UserProfiles2UserRoles"
             cascade="save-update"
                >
            <cache usage="read-write"/>
            <!--<meta attribute="scope-set">protected</meta>-->
            <!--<meta attribute="scope-get">protected</meta>-->
            <key column="userName" property-ref="userName"/>
            <many-to-many class="ch.unartig.studioserver.model.UserRole" column="roleName" property-ref="roleName"/>
        </set>


    </class>
</hibernate-mapping>

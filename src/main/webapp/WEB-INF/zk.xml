<zk xmlns="http://www.zkoss.org/2005/zk/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.zkoss.org/2005/zk/config http://www.zkoss.org/2005/zk/config/zk.xsd">

    <desktop-config>
        <theme-uri>/css/sportrait-zk.css</theme-uri>
    </desktop-config>

    <library-property>
        <name>org.zkoss.theme.preferred</name>
        <value>iceblue_c</value> <!-- or breeze, silvertail, atlantic, deepsea, gardensalad etc. -->
    </library-property>

<!--
    <system-config>
      <disable-event-thread/>
    </system-config>
-->

 <!-- still a need for a listener to have a hibernate session during zk - the old listener from the zkplus package doesn't work anymore after the hibernate 5 migration -->

    <listener>
        <listener-class>
            ch.unartig.studioserver.persistence.util.OpenSessionInViewListener
        </listener-class>
    </listener>



    <system-config>
        <max-upload-size>10000</max-upload-size>
        <!--do we have to specify the upload charset ???-->
        <!--<upload-charset>ISO-8859-1</upload-charset>-->

    </system-config>

</zk>
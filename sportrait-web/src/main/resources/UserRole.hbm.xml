<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
            name="ch.unartig.u_core.model.UserRole"
            table="UserRoles"
            lazy="false"
            >
        <meta attribute="generated-class" inherit="false">ch.unartig.studioserver.model.GeneratedUserRole</meta>

        <cache usage="read-write"/>
        <id
                name="userRoleId"
                type="java.lang.Long"
                >
            <meta attribute="use-in-tostring">true</meta>
            <generator class="native">
                <param name="sequence">sequence_userRoleId</param>
            </generator>
        </id>

        <property
                name="roleName"
                type="java.lang.String"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
            <!--this creates equals/hashcode implementations:-->
            <meta attribute="use-in-equals">true</meta>
        </property>

        <property
                name="roleDescription"
                type="java.lang.String"
                length="255"
                not-null="false"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

    </class>
</hibernate-mapping>
